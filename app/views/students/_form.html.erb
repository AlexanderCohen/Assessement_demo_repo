<%= form_for @student do |student| %>
    <h3 class="ui header">First name <%= student.text_field :first_name %>
    <h3 class="ui header">Last name <%= student.text_field :last_name %>
    <h3 class="ui header">Grade (year)
  <%= student.select(:year, options_for_select([
    ["Grade 1", 1],
    ["Grade 2", 2],
    ["Grade 3", 3],
    ["Grade 4", 4],
    ["Grade 5", 5],
    ["Grade 6", 6],
    ["Grade 7", 7],
    ["Grade 8", 8],
    ]),
    {prompt: 'Student Grade?'},
    {:class=>'ui simple dropdown item'})
  %>
    <h3 class="ui header">Pupil Premium </h3>
  <%= student.select(:pupil_premium, options_for_select([
    ["Yes", true],
    ["No", false]]),
    {prompt: 'Qualify for pupil premium?'},
    {:class=>'ui simple dropdown item'})
  %>
    <h3 class="ui header">Free School Meals </h3>
  <%= student.select(:free_school_meals, options_for_select([
    ["Yes", true],
    ["No", false]]),
    {prompt: 'Does the Student recieve Free School Meals? (FSM)'},
    {:class=>'ui simple dropdown item'})
  %>
    <h3 class="ui header">EAL </h3>
  <%= student.select(:english_as_language, options_for_select([
    ["Yes", true],
    ["No", false]]),
    {prompt: 'English as second language?'},
    {:class=>'ui simple dropdown item'})
  %>
    <h3 class="ui header">Gender </h3>
  <%= student.select(:gender, options_for_select([
    ["Male", true],
    ["Female", false]]),
    {prompt: 'Select Gender'},
    {:class=>'ui simple dropdown item'})
  %>
    <h3 class="ui header">Class </h3>
  <%= student.select(:classroom_id,
      options_for_select(Classroom.all.pluck(:name, :id)),
      :class => 'ui simple dropdown item' )
  %>
    <div class="ui divider"></div>

<% @skill.each do |skill| %>
<div class="ui segment">
  <%= skill.name %>
      <%= student.fields_for :skill_levels do |builder| %>
        <%= builder.select(:proficiency_level_id,
            options_for_select(@skill_level_select),
            :class => 'ui simple dropdown item' )
        %>
      <% end %>
    </div>
<% end %>

  <%= student.submit 'Create Student', :class => 'ui green button' %>
<% end %>
