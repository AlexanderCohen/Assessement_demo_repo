<div class="ui container">
  <div class="ui raised segment">
    <%= form_for(@student) do |form| %>
    <div class="ui center aligned grid">
      <div class="four column row">
        <div class="left floated column">
          <div class="ui raised segment">
          <%= render 'free_school_meals_segment' %>
          <h3 class="ui header">
            Free School Meals
          </h3>
          <%= form.select(:free_school_meals, options_for_select([
            ["Yes", true],
            ["No", false]], @student.free_school_meals),
            {prompt: ''},
            {:class=>'ui simple dropdown item'})
          %>
          </div>
        </div>
        <div class="eight wide column">
          <h3 class="ui header">First name <%= form.text_field :first_name %>
          <h3 class="ui header">Last name <%= form.text_field :last_name %>
          <h3 class="ui header">Class </h3>
            <%= form.select(:classroom_id,
            options_for_select(Classroom.all.pluck(:name, :id),@student.classroom_id),
            :class => 'ui simple dropdown item' )
            %>
        </div>
        <div class="right floated column">
          <h3 class="ui header">
            English As Second Language
          </h3>
          <%= form.select(:english_as_language, options_for_select([
            ["Yes", true],
            ["No", false]], @student.english_as_language),
            {prompt: 'English as second language?'},
            {:class=>'ui simple dropdown item'})
          %>
        </div>

      </div>
      <div class="row">
        <div class="four wide column">
          <div class="ui raised segment">
            <%= render 'pupil_premium' %>
              <h3 class="ui header">Pupil Premium </h3>
                <%= form.select(:pupil_premium, options_for_select([
                  ["Yes", true],
                  ["No", false]], @student.pupil_premium),
                  {prompt: 'Qualify for pupil premium?'},
                  {:class=>'ui simple dropdown item'})
                %>
          </div>
        </div>
        <div class="eight wide column">

          <h3 class="ui header">Gender </h3>
          <%= form.select(:gender, options_for_select([
            ["Male", true],
            ["Female", false]], @student.gender),
            {prompt: 'Select Gender'},
            {:class=>'ui simple dropdown item'})
          %>
            <div class="ui divider"></div>

          <%= @student.skill_levels.first %>


        </div>
        <div class="four wide column">
          <h3 class="ui header">Year Group
            <%= form.select(:year, options_for_select([
              ["Year Group 1", 1],
              ["Year Group 2", 2],
              ["Year Group 3", 3],
              ["Year Group 4", 4],
              ["Year Group 5", 5],
              ["Year Group 6", 6],
              ["Year Group 7", 7],
              ["Year Group 8", 8],
              ], @student.year ),
              {prompt: 'Student Year Group?'},
              {:class=>'ui simple dropdown item'})
            %>
      </div>



<%= form.submit 'Update Student', :class => 'ui green button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
