<div class="ui container">
	<div class="ui segment">
<!-- LEFT RAIL Begins here. -->
	  <div class="ui left very close rail">
	    <div class="ui segment">
	      <%= link_to "Return to Class", classroom_path(@student.classroom),
	      						:class => 'ui massive inverted green button center aligned' %>
	    </div>
	    <div class="ui segment">
	    	<h1 class="ui header center aligned"> Year Group <%= @student.year %></h1>
	    </div>
      <%= render 'pupil_premium' %>
	  </div>

<!-- Right RAIL Begins here. -->
	  <div class="ui right very close rail">
	    <div class="ui segment">
	    	<%= link_to "Update Student",
            edit_student_path,
	    			:class => 'ui massive inverted blue button'
        %>
	    </div>
      <%= render 'free_school_meals_segment' %>
      <%= render 'gender_segment' %>
      <div class="ui segment">
	    	<h3 class="ui header"> SEN </h3>
  	      <%= @student.special_education_need %>
      </div>
	  </div>

<!-- Central RAIL Begins here. -->


  <h1 class="ui center aligned container ">

    <%= @student.first_name %> <%= @student.last_name %>
  </h1>
  <% if @student.avatar? %>
  <%= image_tag(@student.avatar.url, :class => "ui medium centered circular image") %>
  <% end %>
  <div class="ui divider">
  </div>
    <div class="ui grid" >
      <div class="row">
        <div class="three wide column"></div>
        <div class="ten wide column center aligned">
          <div class="ui grid center aligned">
            <% @student.skill_levels.each do |student| %>
              <div class="five wide column center aligned">

                  <%= link_to "#{number_with_precision(student.proficiency_level.level, strip_insignificant_zeros: true)}",
                  skill_level_path(student),
                  :class => 'ui massive standard button center aligned' %>
                  <h4>
              <%= student.proficiency_level.skill.name.capitalize %>
                  </h4>

          </div>
          <% end %>


        </div>
        <div class="three wide column"></div>
      </div>
    </div></div>






  <div class="ui raised segment">
    <h4 class="ui header center aligned">Student Notes</h4>
      <%= link_to "Add Note", new_student_student_note_path(@student), :class => 'ui button' %>
    <% @student_note.reverse.each do |note| %>
    <div class="ui green segment">
      <div class="ui comments">
        <div class="comment">
          <div class="content">
            <a class="author"><%= note.created_by %></a>
            <div class="metadata">
              <div class="date">    <%= note.created_at.strftime('%v') %></div>
            </div>
            <div class="text">
              <p><%= note.note.html_safe %></p>
            </div>
            <div class="actions">
              <a class="reply"><%= link_to "Edit", edit_student_note_path(note.id) %></a>
              <% if current_teacher.admin? %>
                <a class="reply"><%= link_to 'delete', student_note_path(note), :method => :delete, data: {:confirm => "You sure?" } ,
                            :title => "Delete this note?" %></a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
<p class="ui center aligned">
  <div class="ui small feed">
    <h4 class="ui header">Student Progress Record</h4>
    <% @student_record.reverse_each.each do |record| %>
      <div class="event">
        <div class="content">
          <div class="summary">
            <%= "#{record.proficiency_level.prefix}#{number_with_precision(record.proficiency_level.level, strip_insignificant_zeros: true)}
             #{record.proficiency_level.skill.name.capitalize} was achieved at #{record.created_at.strftime('%v')}"
            %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  </p>
</div>
</div>
</div>
</div>
</div>
